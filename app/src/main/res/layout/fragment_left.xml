<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题栏 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:title="控制中心"
            app:titleTextColor="@color/md_theme_light_onBackground" />

        <!-- 连接卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/md_theme_light_surfaceVariant"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/md_theme_light_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="连接"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_wifi"
                            style="@style/Widget.Material3.IconButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:drawableTop="@android:drawable/ic_menu_set_as" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Wi-Fi"
                            android:textColor="@color/md_theme_light_onSurface"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_bluetooth"
                            style="@style/Widget.Material3.IconButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:drawableTop="@android:drawable/ic_btn_speak_now" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="蓝牙"
                            android:textColor="@color/md_theme_light_onSurface"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_data"
                            style="@style/Widget.Material3.IconButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:drawableTop="@android:drawable/ic_menu_share" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="移动数据"
                            android:textColor="@color/md_theme_light_onSurface"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_hotspot"
                            style="@style/Widget.Material3.IconButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:drawableTop="@android:drawable/ic_menu_my_calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="热点"
                            android:textColor="@color/md_theme_light_onSurface"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 媒体控制卡片 -->

        <!-- 快捷设置卡片 -->

        <!-- 设备控制卡片 -->
    </LinearLayout>
</androidx.core.widget.NestedScrollView>